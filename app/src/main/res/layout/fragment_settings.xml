<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ebeff2"
    android:paddingTop="0dp"
    tools:context="com.tickera.tickeraapp.Settings">

    <RelativeLayout
        android:paddingTop="40dp"
        android:layout_width="match_parent"
        android:focusableInTouchMode="true"
        android:focusable="true"
        android:clickable="true"
        android:layout_height="match_parent">
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/event_url"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textColor="#3a3a3a"
            android:textSize="14dp"
            android:text="EVENT URL (WORDPRESS INSTALLATION URL)"/>
        <EditText
            android:id="@+id/url"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textUri"
            android:maxLines="1"
            android:padding="10dp"
            android:cursorVisible="true"
            android:textCursorDrawable="@null"
            android:textColor="#3a3a3a"
            android:background="#ffffff"
            android:layout_marginBottom="20dp"
            />
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:src="@drawable/divider_light"
            android:scaleType="centerCrop"
            android:layout_marginBottom="20dp"/>
        <TextView
            android:id="@+id/api_key"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textColor="#3a3a3a"
            android:textSize="14dp"
            android:text="API KEY"/>
        <EditText
            android:id="@+id/apikey"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:cursorVisible="true"
            android:textCursorDrawable="@null"
            android:layout_height="wrap_content"
            android:inputType="textVisiblePassword"
            android:imeOptions="actionDone"
            android:textColor="#3a3a3a"
            android:background="#ffffff"
            android:layout_marginBottom="20dp"
            />
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:src="@drawable/divider_light"
            android:scaleType="centerCrop"
            android:layout_marginBottom="20dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/auto_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#3a3a3a"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:text="AUTOLOGIN"
                android:layout_weight="2"/>
            <ToggleButton
                android:id="@+id/autologin"
                android:background="@drawable/switch_track"
                android:text=""
                android:textOff=""
                android:textOn=""
                android:layout_width="56dp"
                android:layout_height="34dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:src="@drawable/divider_light"
            android:scaleType="centerCrop"
            android:layout_marginBottom="20dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center">
            <ImageView
                android:clickable="true"
                android:id="@+id/savedetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_centerHorizontal="true"
                android:src="@drawable/savedetails"/>
            <TextView
                android:focusable="false"
                android:clickable="false"
                android:id="@+id/save_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:text="SAVE DETAILS"/>
        </RelativeLayout>
    </LinearLayout>
    </RelativeLayout>

</FrameLayout>
